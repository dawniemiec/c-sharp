<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="stpMain" HorizontalAlignment="Center" Height="414" VerticalAlignment="Center" Width="780" Orientation="Horizontal">
            <StackPanel x:Name="stpDataInput">
                <Label Content="Wybierz parametry równania i wprowadź ich wartości" FontWeight="Bold" FontStretch="Normal"/>
                <StackPanel x:Name="stpDataInputCheck" Orientation="Horizontal" HorizontalAlignment="Center">
                    <CheckBox x:Name="chkA" VerticalAlignment="Center" Content="Parametr A" MinWidth="100" Click="chkA_Click"></CheckBox>
                    <CheckBox x:Name="chkB" VerticalAlignment="Center" Content="Parametr B" MinWidth="100" Click="chkB_Click"></CheckBox>
                    <CheckBox x:Name="chkC" VerticalAlignment="Center" Content="Parametr C" MinWidth="100" Click="chkC_Click"></CheckBox>
                </StackPanel>
                <StackPanel x:Name="stpDataInputA" Orientation="Horizontal">
                    <Label x:Name="lblA" Content="Wprowadź a" MinWidth="100"/>
                    <TextBox x:Name="txtInputA" TextWrapping="Wrap" Text="0" MinWidth="200" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel x:Name="stpDataInputB" Orientation="Horizontal">
                    <Label x:Name="lblB" Content="Wprowadź b" MinWidth="100"/>
                    <TextBox x:Name="txtInputB" TextWrapping="Wrap" Text="0" MinWidth="200" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel x:Name="stpDataInputC" Orientation="Horizontal">
                    <Label x:Name="lblC" Content="Wprowadź c" MinWidth="100"/>
                    <TextBox x:Name="txtInputC" TextWrapping="Wrap" Text="0" MinWidth="200" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="100,0,0,0">
                <Button x:Name="btnOblicz" Content="Oblicz" Click="btnOblicz_Click"></Button>
                <TextBlock x:Name="txtWynik" MinWidth="100" Text="Tu pojawi się wynik"></TextBlock>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
