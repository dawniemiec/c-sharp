<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="0,0,0,326" Orientation="Horizontal">
            <RadioButton x:Name="sum" Content="Sum" Checked="sum_Checked"/>
            <RadioButton x:Name="min" Content="min" Checked="min_Checked"/>
            <RadioButton x:Name="max" Content="max"/>
            <Button x:Name="test3" Content="test3" Click="test3_Click"/>
            <Button x:Name="test4" Content="test4" Click="test4_Click"/>
            <Button Content="test jag" Click="Button_Click"/>
        </StackPanel>
        <Canvas x:Name="cvBg" HorizontalAlignment="Left" Height="237" Margin="167,197,0,0" VerticalAlignment="Top" Width="233"/>
        <StackPanel Margin="372,138,0,0">
            <ListBox x:Name="lBox" Height="100" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        </StackPanel>

    </Grid>
</Window>
