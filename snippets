public static void Dodaj<T>(this ListBox listBox, T obiekt) where T : IWyświetl
{
    listBox.Items.Add(obiekt.PobierzIdentyfikator());
}

public int CompareTo(object obj)
    {
        if (obj is Student otherStudent)
        {
            return Nazwisko.CompareTo(otherStudent.Nazwisko); //zamiana miejscami odwraca porównanie
        }
        else
        {
            throw new ArgumentException("Nie można porównać obiektu typu Student z innym typem.");
        }
    }

public static Kula operator -(Kula kula1, Kula kula2)
    {
        if (kula1.Objetosc() < kula2.Objetosc())
        {
            throw new ArgumentException("Objętość pierwszej kuli musi być większa lub równa objętości drugiej kuli.");
        }

        double różnicaObjętości = kula1.Objetosc() - kula2.Objetosc();
        double promieńNowejKuli = Math.Pow((3 * różnicaObjętości) / (4 * Math.PI), 1.0 / 3.0);
        return new Kula { Nazwa = "Różnica", Promień = promieńNowejKuli };
    }
